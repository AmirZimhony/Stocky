<% layout('layouts/boilerplate') %>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <title> show </title>
    </head>

    <body>
        <h1>
            <%= stock.name %> show
        </h1>
        

            <p> Symbol <%= stock.symbol %>
            </p>
            <p> Price <%= stock.price %>
            </p>
            <p> Volume <%= stock.volume %>
            </p>
            <p> <b>Country</b>
                <%= stock.country %>
            </p>
            <p> <b>Sector</b>
                <%= stock.sector %>
            </p>
            <p> <b>Industry</b>
                <%= stock.industry %>
            </p>
            <p> <b>Number of rising days:</b>
                <%= stock.numOfRisingDays %>
            </p>
            <p> <b>Accumulated change:</b>
                <%= stock.accumulatedChange.toFixed() %> %
            </p>

            <p>For more Data: <a href="https://www.nasdaq.com/market-activity/stocks/<%= stock.ticker  %>">Click
                    here</a></p>
            <p>
            <form action="/stocks/<%= stock._id  %>?_method=DELETE" method="POST">
                <button>Delete</button>
            </form>
            </p>

            <a href="/stocks/<%= stock._id  %>/edit ">Edit</a>
            